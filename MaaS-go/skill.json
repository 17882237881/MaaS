{
  "name": "maas-platform-learning",
  "version": "1.0.0",
  "description": "从零构建企业级MaaS（模型即服务）平台的完整学习指南",
  "author": "MaaS Learning Team",
  "language": "zh-CN",
  "tags": [
    "go",
    "microservices",
    "backend",
    "kubernetes",
    "distributed-systems",
    "maas",
    "machine-learning"
  ],
  "difficulty": "intermediate",
  "estimated_hours": 160,
  "prerequisites": [
    "Go语言基础（语法、并发）",
    "SQL基础",
    "Linux命令行",
    "Git基础"
  ],
  "learning_outcomes": [
    "掌握微服务架构设计原则",
    "学会使用Go语言构建企业级后端服务",
    "理解gRPC、消息队列等分布式通信技术",
    "掌握Kubernetes容器编排",
    "学会限流熔断、分布式事务等高可用技术",
    "具备完整的DevOps实践能力"
  ],
  "phases": [
    {
      "id": "phase1",
      "name": "基础架构搭建",
      "duration_weeks": 4,
      "description": "搭建MaaS平台基础架构，实现API Gateway和Model Registry服务",
      "nodes": [
        {
          "id": "node1-1",
          "name": "项目初始化与架构设计",
          "duration_days": 3,
          "key_tech": ["Go Modules", "Git", "微服务架构"],
          "doc_path": "docs/02-phase1/node-1-1.md"
        },
        {
          "id": "node1-2",
          "name": "API Gateway核心",
          "duration_days": 5,
          "key_tech": ["Gin", "RESTful API", "Swagger", "中间件"],
          "doc_path": "docs/02-phase1/node-1-2.md"
        },
        {
          "id": "node1-3",
          "name": "配置管理体系",
          "duration_days": 3,
          "key_tech": ["Viper", "环境变量", "配置热更新"],
          "doc_path": "docs/02-phase1/node-1-3.md"
        },
        {
          "id": "node1-4",
          "name": "日志与监控基础",
          "duration_days": 4,
          "key_tech": ["Zap", "结构化日志", "Prometheus Metrics"],
          "doc_path": "docs/02-phase1/node-1-4.md"
        },
        {
          "id": "node1-5",
          "name": "数据库层设计",
          "duration_days": 5,
          "key_tech": ["GORM", "PostgreSQL", "Repository模式", "数据库迁移"],
          "doc_path": "docs/02-phase1/node-1-5.md"
        }
      ]
    },
    {
      "id": "phase2",
      "name": "核心功能开发",
      "duration_weeks": 5,
      "description": "实现MaaS平台核心业务流程",
      "nodes": [
        {
          "id": "node2-1",
          "name": "服务间通信",
          "duration_days": 5,
          "key_tech": ["gRPC", "Protocol Buffers", "服务发现"],
          "doc_path": "docs/03-phase2/node-2-1.md"
        },
        {
          "id": "node2-2",
          "name": "缓存层设计",
          "duration_days": 4,
          "key_tech": ["Redis", "多级缓存", "缓存穿透/击穿/雪崩"],
          "doc_path": "docs/03-phase2/node-2-2.md"
        },
        {
          "id": "node2-3",
          "name": "认证与授权",
          "duration_days": 5,
          "key_tech": ["JWT", "RBAC", "Casbin", "OAuth2"],
          "doc_path": "docs/03-phase2/node-2-3.md"
        },
        {
          "id": "node2-4",
          "name": "模型上传与存储",
          "duration_days": 5,
          "key_tech": ["MinIO", "分片上传", "断点续传"],
          "doc_path": "docs/03-phase2/node-2-4.md"
        },
        {
          "id": "node2-5",
          "name": "模型版本管理",
          "duration_days": 4,
          "key_tech": ["Semantic Versioning", "版本控制", "版本回滚"],
          "doc_path": "docs/03-phase2/node-2-5.md"
        },
        {
          "id": "node2-6",
          "name": "推理服务基础",
          "duration_days": 5,
          "key_tech": ["并发控制", "超时控制", "连接池"],
          "doc_path": "docs/03-phase2/node-2-6.md"
        }
      ]
    },
    {
      "id": "phase3",
      "name": "企业级特性",
      "duration_weeks": 4,
      "description": "打造生产级应用",
      "nodes": [
        {
          "id": "node3-1",
          "name": "消息队列集成",
          "duration_days": 5,
          "key_tech": ["Kafka", "异步处理", "死信队列"],
          "doc_path": "docs/04-phase3/node-3-1.md"
        },
        {
          "id": "node3-2",
          "name": "容器化与编排",
          "duration_days": 5,
          "key_tech": ["Kubernetes", "Helm", "滚动更新"],
          "doc_path": "docs/04-phase3/node-3-2.md"
        },
        {
          "id": "node3-3",
          "name": "限流与熔断",
          "duration_days": 4,
          "key_tech": ["Sentinel", "令牌桶", "熔断器模式"],
          "doc_path": "docs/04-phase3/node-3-3.md"
        },
        {
          "id": "node3-4",
          "name": "分布式事务",
          "duration_days": 4,
          "key_tech": ["Saga模式", "DTM", "TCC", "最终一致性"],
          "doc_path": "docs/04-phase3/node-3-4.md"
        },
        {
          "id": "node3-5",
          "name": "监控告警体系",
          "duration_days": 4,
          "key_tech": ["Prometheus", "Grafana", "Jaeger", "链路追踪"],
          "doc_path": "docs/04-phase3/node-3-5.md"
        }
      ]
    },
    {
      "id": "phase4",
      "name": "高级特性与优化",
      "duration_weeks": 3,
      "description": "企业级产品化",
      "nodes": [
        {
          "id": "node4-1",
          "name": "模型部署与调度",
          "duration_days": 5,
          "key_tech": ["NVIDIA Docker", "GPU调度", "HPA/VPA", "模型预热"],
          "doc_path": "docs/05-phase4/node-4-1.md"
        },
        {
          "id": "node4-2",
          "name": "多租户与配额",
          "duration_days": 4,
          "key_tech": ["多租户架构", "资源隔离", "配额管理"],
          "doc_path": "docs/05-phase4/node-4-2.md"
        },
        {
          "id": "node4-3",
          "name": "性能优化",
          "duration_days": 4,
          "key_tech": ["pprof", "性能测试", "数据库优化", "并发优化"],
          "doc_path": "docs/05-phase4/node-4-3.md"
        },
        {
          "id": "node4-4",
          "name": "CI/CD流水线",
          "duration_days": 3,
          "key_tech": ["GitHub Actions", "自动化测试", "GitOps"],
          "doc_path": "docs/05-phase4/node-4-4.md"
        }
      ]
    }
  ],
  "tech_stack": {
    "language": "Go 1.21+",
    "framework": "Gin, gRPC",
    "database": "PostgreSQL, Redis, MongoDB(optional)",
    "messaging": "Kafka",
    "storage": "MinIO",
    "container": "Docker, Kubernetes",
    "monitoring": "Prometheus, Grafana, Jaeger",
    "cicd": "GitHub Actions, Helm"
  },
  "resources": {
    "github_repo": "https://github.com/17882237881/MaaS",
    "documentation": "./docs",
    "examples": "./examples",
    "deploy": "./deploy"
  }
}